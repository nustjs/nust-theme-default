$color-border = #ededed
$color-border-darker = #dbdbdb
$color-link = #333
$color-dark = #000
$color-background = #eee
$color-sidebar-text = #777
$color-widget-background = $color-border
$color-widget-border = #ccc
$color-footer-background = #262a30
$color-mobile-nav-background = #191919
$color-twitter = #00aced
$color-facebook = #3b5998
$color-pinterest = #cb2027
$color-google = #dd4b39
$color-theme = #6190e8
$color-primary = $color-theme
$header-bd-color = #eee
$color-white = #fff

$bg-primary = $color-theme
$bg-block = #f8f8f8
$bg-table-th = #fbfbfb
$bg-table-hd = #f1f1f1
$placeholder-color = #999

// Fonts
$font-family-monospace = "Input Mono", "PT Mono", Consolas, Monaco, Menlo, monospace
$font-family = "PingFang SC", "Lantinghei SC", "Microsoft Yahei", "Hiragino Sans GB", "Microsoft Sans Serif", "WenQuanYi Micro Hei", sans
$font-family-title = "PingFang SC", Verdana, "Helvetica Neue", "Microsoft Yahei", "Hiragino Sans GB", "Microsoft Sans Serif", "WenQuanYi Micro Hei", sans-serif
$font-sans = "Helvetica Neue", Helvetica, Arial, sans-serif
$font-serif = Palatino, Optima, Georgia, serif
$font-mono = $font-family-monospace
$font-size = 1em
$font-weight = 300
$font-weight-title = 100
$line-height = 1.8
$line-height-title = 1.35

// Header
$logo-size = 40px
$subtitle-size = 16px

// Layout
$block-margin = 50px
$article-padding = 20px
$mobile-nav-width = 280px

// header
$header-height = 70px
$header-height-mobi = 60px
$header-logo-width = 160px
$header-lang-width = 80px

/* fgs
   ========================================================================== */
$fgs-column-count ?= 12 // both 12 and 16 are fine
$fgs-gutter ?= 20px
$fgs-section-mb ?= 25px
$fgs-aside-pl ?= 15px
$fgs-aside-pr ?= 15px
$fgs-aside-title-mb ?= 12px
$fgs-aside-title-bdcolor ?= $color-theme
$fgs-header-height ?= $header-height

// breakpoints hash
// 768, 960, 1152, 1344 and 1536 have been chosen because they are divisible by both 12 and 16
$breakpoints ?= {
  mobile: 479px,
  tablet: 768px,
  desktop: 960px,
  widescreen: 1152px,
  hd: 1344px,
  fhd: 1536px
}
// column 
$column-size = {
  tablet: $breakpoints['tablet'] / $fgs-column-count,
  desktop: $breakpoints['desktop'] / $fgs-column-count,
  widescreen: $breakpoints['widescreen'] / $fgs-column-count,
  hd: $breakpoints['hd'] / $fgs-column-count,
  fhd: $breakpoints['fhd'] / $fgs-column-count
}

// breakpoints
$breakpoint-mobile = $breakpoints['mobile']
$breakpoint-tablet = $breakpoints['tablet'] + $fgs-gutter * 2
$breakpoint-desktop = $breakpoints['desktop'] + $fgs-gutter * 2
$breakpoint-widescreen = $breakpoints['widescreen'] + $fgs-gutter * 2
$breakpoint-hd = $breakpoints['hd'] + $fgs-gutter * 2
$breakpoint-fhd = $breakpoints['fhd'] + $fgs-gutter * 2

/* affix
   ========================================================================== */
$affix-bdcolor = $color-border
$affix-column-size = 3
$affix-width-tablet = $column-size['tablet'] * $affix-column-size
$affix-width-desktop = $column-size['desktop'] * $affix-column-size
$affix-width-widescreen = $column-size['widescreen'] * $affix-column-size
$affix-width-hd = $column-size['hd'] * $affix-column-size
$affix-width-fhd = $column-size['fhd'] * $affix-column-size

/* post
   ========================================================================== */
$post-width-tablet = $column-size['tablet'] * ($fgs-column-count - $affix-column-size)
$post-width-desktop = $column-size['desktop'] * ($fgs-column-count - $affix-column-size)
$post-width-widescreen = $column-size['widescreen'] * ($fgs-column-count - $affix-column-size)
$post-width-hd = $column-size['hd'] * ($fgs-column-count - $affix-column-size)
$post-width-fhd = $column-size['fhd'] * ($fgs-column-count - $affix-column-size)

