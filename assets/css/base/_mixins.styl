/**
 * Based on 960 grid system, inspired by http://bulma.io/documentation/layout/container/
 * Support both of 12 and 16 columns
 * Gutter width: 20px
 * 1. Tablet: 768 / (12*16) = 4
 * 2. Desktop: 960 / (12*16) = 5
 * 3. Widescreen: 1152 / (12*16) = 6
 * 4. HD: 1344 / (12*16) = 7
 * 5. FHD: 1536 / (12*16) = 8
 */

// mixins
mobile()
  @media (max-width: $breakpoint-mobile)
    {block}

tablet()
  @media (min-width: $breakpoint-tablet)
    {block}

desktop()
  @media (min-width: $breakpoint-desktop)
    {block}

widescreen()
  @media (min-width: $breakpoint-widescreen)
    {block}

hd()
  @media (min-width: $breakpoint-hd)
    {block}

fhd()
  @media (min-width: $breakpoint-fhd)
    {block}

// Clearfix. http://nicolasgallagher.com/micro-clearfix-hack/
clearfix() {
  &:before,
  &:after {
    content: " ";
    display: table;
  }
  &:after { clear: both; }
}

control()
  -moz-appearance: none
  -webkit-appearance: none
  border: 1px solid transparent
  border-radius: 2px
  box-shadow: none
  font-size: 100%
  padding: 0.3em 0.5em
  vertical-align: top
  // States
  &:focus,
  &.is-focused,
  &:active,
  &.is-active
    outline: none
  &[disabled]
    cursor: not-allowed

btnGradientBg($direction, $startColor, $endColor)
  background: $startColor
  background: linear-gradient($direction, $startColor 0%, $endColor 80%, $endColor 100%)
