@keyframes slideOutUp {
  from {
    transform: translate3d(0, 0, 0);
  }

  to {
    visibility: hidden;
    transform: translate3d(0, -100%, 0);
  }
}

.slideOutUp {
  animation-name: slideOutUp;
}

@keyframes foldUp {
  to {
    height: 0;
    padding-top: 0;
    padding-bottom: 0;
  }
}

.foldUp {
  animation-name: foldUp;
}
