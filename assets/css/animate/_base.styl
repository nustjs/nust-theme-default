$base-duration = 1s

.animated
  animation-duration: $base-duration
  animation-fill-mode: both
  &.infinite
    animation-iteration-count: infinite
  &.hinge
    animation-duration: $base-duration * 2
  &.bounceIn,
  &.bounceOut
    animation-duration: $base-duration * 0.75
  &.flipOutX,
  &.flipOutY
    animation-duration: $base-duration * 0.75